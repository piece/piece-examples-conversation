firstState: MainMenu

viewState:
  - name: MainMenu
    view: MainMenu
    transition:
      - event: selectMainMenu
        nextState: ValidateMainMenu
  - name: SideMenu
    view: SideMenu
    transition:
      - event: selectSideMenu
        nextState: ValidateSideMenu
  - name: Confirmation
    view: Confirmation
    activity:
      method: onConfirmation
    transition:
      - event: finish
        nextState: Finish
      - event: reselect
        nextState: MainMenu
  - name: Finish
    view: Finish

actionState:
  - name: ValidateMainMenu
    activity:
      method: onValidateMainMenu
    transition:
      - event: valid
        nextState: SideMenu
      - event: invalid
        nextState: MainMenu
  - name: ValidateSideMenu
    activity:
      method: onValidateSideMenu
    transition:
      - event: valid
        nextState: Confirmation
      - event: invalid
        nextState: SideMenu
