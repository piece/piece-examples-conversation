firstState: MainMenu

viewState:
  - name: MainMenu
    view: MainMenu
    transition:
      - event: selectMainMenu
        nextState: ValidationMainMenu
  - name: SideMenu
    view: SideMenu
    transition:
      - event: selectSideMenu
        nextState: ValidationSideMenu
  - name: Confirmation
    view: Confirmation
    activity:
      method: onConfirmation
    transition:
      - event: register
        nextState: Registration
      - event: reselect
        nextState: MainMenu
  - name: Finish
    view: Finish

actionState:
  - name: ValidationMainMenu
    activity:
      method: onValidationMainMenu
    transition:
      - event: valid
        nextState: SideMenu
      - event: invalid
        nextState: MainMenu
  - name: ValidationSideMenu
    activity:
      method: onValidationSideMenu
    transition:
      - event: valid
        nextState: Confirmation
      - event: invalid
        nextState: SideMenu
  - name: Registration
    activity:
      method: onRegistration
    transition:
      - event: done
        nextState: Finish
      - event: fail
        nextState: Confirmation
