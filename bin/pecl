#!/bin/sh

# first find which PHP binary to use
if test "x$PHP_PEAR_PHP_BIN" != "x"; then
  PHP="$PHP_PEAR_PHP_BIN"
else
  if test "/home/matsu/apps/php-5.2.8/bin/php" = '@'php_bin'@'; then
    PHP=php 
  else
    PHP="/home/matsu/apps/php-5.2.8/bin/php"
  fi
fi

# then look for the right pear include dir
if test "x$PHP_PEAR_INSTALL_DIR" != "x"; then
  INCDIR=$PHP_PEAR_INSTALL_DIR
  INCARG="-d include_path=$PHP_PEAR_INSTALL_DIR"
else
  if test "/home/matsu/GITWORK/piece-examples-conversation/imports/pear" = '@'php_dir'@'; then
    INCDIR=`dirname $0`
    INCARG=""  
  else
    INCDIR="/home/matsu/GITWORK/piece-examples-conversation/imports/pear"
    INCARG="-d include_path=/home/matsu/GITWORK/piece-examples-conversation/imports/pear"
  fi
fi

exec $PHP -C -n -q $INCARG -d output_buffering=1 -d variables_order=EGPCS -d safe_mode=0 -d register_argc_argv="On" $INCDIR/peclcmd.php "$@"
