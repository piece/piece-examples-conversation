#!/bin/sh

SCRIPT_DIR=$(cd $(dirname $0) && pwd)
TARGET_DIR=$(cd $(dirname $SCRIPT_DIR) && pwd)
PHP_PEAR_INSTALL_DIR=$TARGET_DIR/imports/pear

PHP_BIN=/usr/bin/php
PEAR_BIN=/usr/bin/pear
EXT_DIR=/usr/lib/php5/20060613+lfs

if [ ! -f $SCRIPT_DIR/pear.ini ]; then
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set bin_dir $TARGET_DIR/bin user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set doc_dir $PHP_PEAR_INSTALL_DIR/docs user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set ext_dir $EXT_DIR user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set php_dir $PHP_PEAR_INSTALL_DIR user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set cache_dir $TARGET_DIR/tmp/pear/cache user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set cfg_dir $PHP_PEAR_INSTALL_DIR/cfg user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set data_dir $PHP_PEAR_INSTALL_DIR/data user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set download_dir $TARGET_DIR/tmp/pear/download user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set php_bin $PHP_BIN user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set temp_dir $TARGET_DIR/tmp/pear/temp user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set test_dir $PHP_PEAR_INSTALL_DIR/tests user
    $PEAR_BIN -c $SCRIPT_DIR/pear.ini config-set www_dir $TARGET_DIR/www user
fi

$PEAR_BIN -c $SCRIPT_DIR/pear.ini $*

exit $?
